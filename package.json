    },
    {
      "name": "Ramesh BG",
      "email": "rameshbg11@gmail.com",
      "url": "https://www.linkedin.com/in/rameshbg/"
    }
  ],
  "dependencies": {
    "discord.js": "^12.3.1",
    "dotenv": "^9.0.1",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "codecov": "^3.7.2",
    "@types/node": "^14.6.2",
    "ts-node-dev": "^1.0.0-pre.61",
    "typescript": "^4.0.2",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "chai": "^4.2.0",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "sinon": "^10.0.1",
    "ts-mockito": "^2.6.1",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3"
  }
}